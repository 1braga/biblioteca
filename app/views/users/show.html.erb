<div class="card">
  <div class="card-body">
    <h2 class="card-title"><%= @user.name %></h2>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Total de livros lidos:</strong> <%= @user.reload.readings_count %></p>


    <div class="mt-3">
      <%= link_to "Editar", edit_user_path(@user), class: "btn btn-outline-primary" %>
      <%= link_to "Voltar", users_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
